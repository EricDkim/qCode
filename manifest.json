// this manifest is nothing more than a metadata file in JSON format that contains properties such as the 
// extensions name, description, version, etc. 
// this manifest will also decalre to the Chrome browser on what it will be doing,
// and what permissions it requires 

{
    "manifest_version" : 2,
    
    "name": "qCode, getting started",
    "description" : "Extension to get the url of a website and convert it into a QR code",
    "version" : "1.0",
    
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    
    "permissions" : [
        "tabs",
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}